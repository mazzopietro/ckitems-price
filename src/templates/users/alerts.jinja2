{% extends 'base.jinja2' %}
{% block content %}

  <h1>Alerts / <small class="text-muted">showing already existing alerts</small></h1>

  <hr>

  <div class="list-group">
    {% for alert in alerts %}
      <a href="{{ url_for('alerts.get_alert_page', alert_id=alert._id) }}" class="list-group-item list-group-item-action {{ 'list-group-item-warning' if not alert.active else '' }}">
        <h5>{{ '<i class="fas fa-times"></i>' if not alert.active else '' }} Alert for {{ alert.item.name }}</h5>
        <span>Last price found <strong>{{ alert.item.price }}</strong></span><br>
        <span>Last checked on <strong>{{ alert.last_checked.strftime("%d/%m/%Y at %H:%M") }}</strong></span>
      </a>
    {% endfor %}
  </div>
  <hr>
  <a href="{{ url_for('alerts.create_alert') }}" class="btn btn-success"><i class="fas fa-plus"></i> Create new</a>

{% endblock %}
