{% extends 'base.jinja2' %}
{% block content %}

  <h1>Alert <small>for '{{ alert.item.name }}'</small></h1>
  <hr>
  <p>Last price found <strong>{{ alert.item.price }}</strong></p>
  <p>Last checked on <strong>{{ alert.last_checked.strftime('%d/%m/%Y at %H:%M') }}</strong></p>
  <div class="card">
    <div class="card-body">
        <a class="btn btn-outline-info" href="{{ alert.item.url }}" role="button">Visit site</a>
        <a class="btn btn-outline-warning" href="{{ url_for('alerts.edit_alert', alert_id=alert._id) }}" role="button">Edit</a>
        {% if alert.active %}
            <a class="btn btn-outline-danger" href="{{ url_for('alerts.deactivate_alert', alert_id=alert._id) }}" role="button">Deactivate alert</a>
        {% else %}
            <a class="btn btn-outline-success" href="{{ url_for('alerts.activate_alert', alert_id=alert._id) }}" role="button">Activate alert</a>
            <a class="btn btn-outline-danger" href="{{ url_for('alerts.delete_alert', alert_id=alert._id) }}" role="button">Permanently delete alert</a>
        {% endif %}
        <a class="btn btn-outline-warning" href="{{ url_for('alerts.check_alert_price', alert_id=alert._id) }}" role="button">Check alert price</a>
    </div>
  </div>
{% endblock %}
