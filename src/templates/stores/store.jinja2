{% extends 'base.jinja2' %}
{% block content %}

  <h1>Store / <small>{{ store.name }}</small></h1>
  <hr>
  <p>All the URLs in this store should start with <strong>{{ store.url_prefix }}</strong></p>
  {% if session['email'] in config.ADMINS %}
    <div class="card">
      <div class="card-body">
          <a class="btn btn-outline-warning" href="{{ url_for('stores.edit_store', store_id=store._id) }}" role="button">Edit store</a>
          <a class="btn btn-outline-danger" href="{{ url_for('stores.delete_store', store_id=store._id) }}" role="button">Permanently delete store</a>
      </div>
    </div>
  {% endif %}

{% endblock %}
