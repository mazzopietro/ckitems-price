<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pricing Service</title>

    {% include 'html_dependencies.html' %}

  </head>
  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
      <div class="container">
        <a class="navbar-brand" href="/" title="home">Pricing</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navbarNav" class="collapse navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="{{ url_for('stores.index') }}">Stores</a>
            </li>
          </ul>
          {% if session['email'] %}
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" href="{{ url_for('users.user_alerts') }}"><i class="fas fa-bell"></i> Your Alerts</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ url_for('users.logout_user') }}"><i class="fas fa-sign-in-alt"></i> Logout</a>
              </li>
            </ul>
          {% else %}
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" href="{{ url_for('users.register_user') }}"><i class="fas fa-user-plus"></i> Sign Up</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ url_for('users.login_user') }}"><i class="fas fa-sign-in-alt"></i> Log In</a>
              </li>
            </ul>
          {% endif %}
        </div>
      </div>
    </nav>

    <div class="content container">
    {% block content %}

    {% endblock %}
    </div>

  </body>
</html>
